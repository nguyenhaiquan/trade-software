<body>
    <!-- Header NAVBAR -->
    <header id="header">
        <!--
            Navigation với class navbar là mặc định , class navbar-default là sử dụng giao diện .
            CHúng ta có vài class sau "navbar-default" , "navbar-inverse"
        -->
        <nav class="navbar navbar-default navbar-fixed-top">
            <div class="container-fluid">
                <!--
                Class "nav navbar-header" sử dụng mặc định
                Responsive Design : class="navbar-toggle" data-toggle="collapse" data-target="#myNavbar"
                -->
                <div class="nav navbar-header">
                    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#myNavbar">
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>                    
                    <a class="navbar-brand" href="~/Views/Home/Index.cshtml"><img src="~/asset/images/logo_0.png" alt="logo"></a>
                </div>
                <section id="login">
                        @Html.Partial("_LoginPartial")
                </section>
                <!--
                Class : "collapse navbar-collapse" id="myNavbar" hiển thị thông tin khi thu nhỏ giao diện
                -->
                <div class="collapse navbar-collapse" id="myNavbar">
                    <ul class="nav navbar-nav">
                        <li>@Html.ActionLink("Trang Chủ", "Index", "Home")</li>                        
                        <li>@Html.ActionLink("Giới thiệu Quantum", "Gioithieu", "Home")</li>
                        <li>@Html.ActionLink("Sản phẩm và dịch vụ", "Sanpham", "Home")</li>
                        <li>@Html.ActionLink("Tải phần mềm", "Download", "Home")</li>
                        <li>@Html.ActionLink("Trợ giúp", "Trogiup", "Home")</li>
                        <li>@Html.ActionLink("Liên hệ", "Lienhe", "Home")</li>
                    </ul>
                    
                </div>
            </div>
        </nav>
    </header>
